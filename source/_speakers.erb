<section id="speakers">
    <div class="container-fluid">
        <div class="section-header text-center">
            <h3>Speakers</h3>
            <p>
                Meet our professionals.
            </p>
            <p>
                More speakers to be revealed in coming weeks.
            </p>
        </div>
        <div class="card-deck">
            <% data.speakers.items.sort_by(&:surname).each do |s| %>
                <%= partial(:speaker, :locals => { :speaker => s }) %>
            <% end %>
        </div>
    </div>
</section>