<div>
    <%= speaker.description %>
</div>

<hr />

<div class="speaker-activities">
    <% sessions.each do |s| %>
        <%
            session_day = s.slot / 100
            session_hour = s.slot / 100 * 100 + s.slot % 10
        %>
        <div class="speaker-activity">
            <div class="activity-time">
                <span class="lnr lnr-mic"></span>
                Day <%= session_day %>, <%= data.slots[session_hour.to_s] %>
            </div>
            <h4><%= s.title %></h4>
            <%= partial "sessions/" + s.id %>
        </div>
    <% end %>
</div>